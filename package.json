{
  "name": "vscode-copilot-proxy",
  "displayName": "VS Code Copilot Proxy",
  "publisher": "local",
  "description": "Proxy requests from external agents through VS Code Copilot models",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/gratajik/vscode-copilot-proxy"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-proxy.start",
        "title": "Copilot Proxy: Start Server"
      },
      {
        "command": "copilot-proxy.stop",
        "title": "Copilot Proxy: Stop Server"
      },
      {
        "command": "copilot-proxy.status",
        "title": "Copilot Proxy: Show Status"
      }
    ],
    "configuration": {
      "title": "Copilot Proxy",
      "properties": {
        "copilotProxy.port": {
          "type": "number",
          "default": 8080,
          "description": "Port number for the proxy server"
        },
        "copilotProxy.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when VS Code launches"
        },
        "copilotProxy.defaultModel": {
          "type": "string",
          "default": "",
          "description": "Default model to use when not specified in request (leave empty to use first available)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "mocha --require ts-node/register 'src/test/**/*.test.ts'",
    "test:coverage": "nyc npm run test"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "chai": "^4.5.0",
    "eslint": "^8.56.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
